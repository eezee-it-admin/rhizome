<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="ir_mail_server_form_add_email_alias">
        <field name="model">ir.mail_server</field>
        <field name="inherit_id" ref="base.ir_mail_server_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[3]" position="after">
                <group string="Rescriction">
                    <field name="mail_server_restrictions"/>
                    <field name="alias_domain"
                           attrs="{'invisible': [('mail_server_restrictions','=','no')]}"/>
                    <field name="force_from_email_alias" attrs="{'required': [('mail_server_restrictions','!=','no')],
                                                                'invisible': [('mail_server_restrictions','=','no')]}"/>
                    <field name="force_default_bounce_alias" attrs="{'required': [('mail_server_restrictions','=','full_email_address')],
                                                                    'invisible': [('mail_server_restrictions','!=','full_email_address')]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
